<div class="panel panel-default">
    <div class="panel-heading">
        メッセージ一覧
    </div>
    
    <div class="panel-body">
        <% @messages.each do |message| %>
            <span class="label label-info"><%= message.name %></span>
            <%= message.body %>
            <br>
        <% end %>
    </div>
</div>

<!-- フォームを生成 -->
<%= form_for(Message.new, html: {class: "form-horizontal"}) do |f| %>
    <div class="form-group">
        <label for="name" class="col-md-1 control-label">名前</label>
        <div class="col-md-3">
            <%= f.text_field :name, class: "form-control", id: "name" %>
        </div>
    </div>
    <div class="form-group">
        <label for="body" class="col-md-1 control-label">内容</label>
        <div class="col-md-8">
            <%= f.text_area :body , class: "form-control", id: "body", rows: "5" %>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-1 col-md-2">
            <%= f.submit class: "btn btn-sm btn-primary" %>
        </div>
    </div>
<% end %>