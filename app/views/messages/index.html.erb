<div class="panel panel-default">
    <div class="panel-heading">
        メッセージ一覧
    </div>
    
    <div class="panel-body">
        <% @messages.each do |message| %>
            <span class="label label-info"><%= message.name %> ( <%= message.age %> )</span>
            <%= message.body %>
            <%# リンクを生成：<a href="編集ページへのパス">edit</a> %>
            (<%= link_to "edit", edit_message_path(message) %>
            <%# 削除ページへのリンク :method HTTPメソッドの指定 :data DATA要素 %>
            <%= link_to "destroy", message_path(message), method: :delete, data: {confirm: '削除してもよろしいですか？'} %>)
            <br>
        <% end %>
    </div>
</div>

<%# フォームを生成：部分テンプレートを読み込んでいる %>
<%= render 'form' %>